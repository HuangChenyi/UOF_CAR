<?xml version="1.0" encoding="utf-8"?>
<!-- 
    注意: 除了手動編輯這個檔案以外，您也可以使用 
    Web 管理工具設定您的應用程式設定值。請使用 
    Visual Studio 中的 [網站] -> [ASP.NET 組態] 選項。
    如需完整的設定與註解清單，請參考 
    machine.config.comments (通常位於 
    \Windows\Microsoft.Net\Framework\v2.x\Config) 
-->
<configuration>
	<appSettings/>
	<connectionStrings/>
	<system.web>
		<pages validateRequest="false" enableEventValidation="false" />
	</system.web>

	<!--Role Management-->
  <!-- 權限設定 -->
	<location path="Design/AuthoritySetting.aspx">
		<system.web>
			<authorization>
				<allow roles="QueAdmin,SystemAdmin"/>
				<deny users="*"/>
			</authorization>
		</system.web>
	</location>

  <!-- 填寫人屬性維護 -->
	<location path="Design/QusProperty.aspx">
		<system.web>
			<authorization>
				<allow roles="QueManager,QueAdmin,SystemAdmin,QueClassDesigner"/>
				<deny users="*"/>
			</authorization>
		</system.web>
	</location>

  <!-- 新增/維護填寫人屬性 -->
	<location path="Design/QusPropertyMA.aspx">
		<system.web>
			<authorization>
				<allow roles="QueManager,QueAdmin,SystemAdmin,QueClassManager,QueClassDesigner"/>
				<deny users="*"/>
			</authorization>
		</system.web>
	</location>

  <!-- 問卷維護 -->
  <location path="Design/QusDesign.aspx">
		<system.web>
			<authorization>
				<allow roles="QueManager,QueAdmin,SystemAdmin,QueClassManager,QueClassDesigner"/>
				<deny users="*"/>
			</authorization>
		</system.web>
	</location>

  <!-- 問卷維護 - 問卷類別維護Dialog -->
  <location path="Design/QusCategory.aspx">
    <system.web>
      <authorization>
        <allow roles="QueManager,QueAdmin,SystemAdmin,QueClassManager,QueClassDesigner"/>
        <deny users="*"/>
      </authorization>
    </system.web>
  </location>

  <!-- 問卷類別權限設定 -->
  <location path="Design/QusCategoryAuthority.aspx">
    <system.web>
      <authorization>
        <allow roles="QueManager,QueAdmin,SystemAdmin,QueClassManager"/>
        <deny users="*"/>
      </authorization>
    </system.web>
  </location>
  
  <!-- 發佈審核 -->
  <location path="Design/QusExamine.aspx">
		<system.web>
			<authorization>
				<allow roles="QueExaminer,SystemAdmin,QueClassExaminer"/>
				<deny users="*"/>
			</authorization>
		</system.web>
	</location>

  <!-- 個人問卷清單 -->
  <location path="FillOut/PersonalQusList.aspx">
    <system.web>
      <authorization>
        <allow roles="QueMember,Employee"/>
        <deny users="*"/>
      </authorization>
    </system.web>
  </location>

  <!-- 問卷統計 -->
  <location path="FillOut/QusStatistics.aspx">
    <system.web>
      <authorization>
        <allow roles="QueMember,Employee"/>
        <deny users="*"/>
      </authorization>
    </system.web>
  </location>

</configuration>

